#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH
export PATH=$OPENSHIFT_ERL_DIR/usr/bin/:$PATH

function start {
  echo "Starting Erlang cartridge"
  cd $OPENSHIFT_REPO_DIR
  if [ -f start.sh ]; then
      nohup ./start.sh &
      echo $! > pid.txt
  fi
}

function stop {
  echo "Stopping Erlang cartridge"
  cd $OPENSHIFT_REPO_DIR
  if [ status ]; then
      kill $(cat pid.txt)
  fi
}

function restart {
  stop
  start
}

function status {
  if [ -f pid.txt ]; then
      local pid=$(cat pid.txt)
      local stat=$(ps $pid | grep $pid)
      if [ "$stat" != "" ]; then
          return 0
      fi
  fi
  return 1
}

function build {
  echo "Building Erlang application"
  cd $OPENSHIFT_REPO_DIR
  if [ -f rebar.config ]; then
      rebar get-deps && rebar compile
  fi
  echo "Application succesfully built"
}

function catchall {
    echo "not yet implemented"
}

case "$1" in
  start)                start ;;
  stop)                 stop ;;
  restart)              restart ;;
  status)               status ;;
  reload)               catchall ;;
  tidy)                 catchall ;;
  pre-build)            catchall ;;
  build)                build ;;
  deploy)               catchall ;;
  post-deploy)          catchall ;;
  pre-snapshot)         catchall ;;
  post-snapshot)        catchall ;;
  pre-restore)          catchall ;;
  post-restore)         catchall ;;
  pre-repo-archive)     catchall ;;
  update-configuration) catchall ;;
  *)           exit 0
esac

exit 0
